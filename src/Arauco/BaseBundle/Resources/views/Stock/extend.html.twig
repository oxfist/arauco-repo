{% extends '::base.html.twig' %}

{% block title %} Stock sin Asignar -{% endblock %}

{% block content %}
<div class="tab-content">
  {% block body %}
  <div class="tab-pane active" id="inicio">
    <div class="hero-unit">
      {% block titulo %}
      <legend>Stock disponible</legend>
      {% endblock %}
      {% if stocksa.0 is not defined %}
        <div class="alert alert-error">
          <p>No existe stock disponible para el producto con ID <strong>{{ id }}</strong>.</p>
        </div>
      {% else %}
      <p>
        <strong>ID Material:</strong> {{ id }}
        <br />
        <strong>Descripción Material:</strong> {{ stocksa.0.Desc_Mat }}
      </p>
      <a class ="text-info" href="{{ path ('arauco_stock_csv') }}">Exportar a .csv <i class="icon-download-alt"></i></a>
      <br />
      <br />
      <table class="table" id="myTable">
        <thead>
          <tr>
            <th>Lote</th>
            <th>Centro</th>
            <th>Almacén</th>
            <th>Volumen</th>
          </tr>
        </thead>
        <tbody>
          {% for material in stocksa %}
          <tr>
            <th>{{ material.Lote }}</th>
            <th>{{ material.Centro }}</th>
            <th>{{ material.Almacen }}</th>
            <th>{{ material.M3 }}</th>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% endif %}
      <br />
    </div> <!-- hero-unit -->
  </div> <!-- tab-pane active -->
  {% endblock %}
</div> <!-- tab-content -->
{% endblock %}
