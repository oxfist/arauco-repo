{% extends '::base.html.twig' %}
{% block title %} Balance de masa -{% endblock %}

{% block content %}
<div class="tab-content">
  {% block body %}
  <div class="tab-pane active" id="inicio">
    <div class="hero-unit">
      {% block titulo %}
      <h2>Arauco y Constitución S.A.</h2>
      {% endblock %}
      <p>Total Balance = 
      {% if totalBalance > 0 %}
      <span class="badge badge-success">{{ totalBalance }}</span>
      {% else %}
      <span class="badge badge-important">{{ totalBalance }}</span>
      {% endif %}
      m&sup3;.<br />
      Total Stock = {{ totalStock }} m&sup3;.<br />
      Total Pedidos = {{ totalPedidos }} m&sup3;.<br />
      </p>
      <table class="table" id="myTable">
        <thead>
          <tr>
            <th>Código Material</th>
            <th>Material</th>
            <th>Stock</th>
            <th>Total pedidos</th>
            <th>Balance</th>
          </tr>
        </thead>
        <tbody>
        {% for materialStock in total %}
          <tr>
            <th>{{ materialStock.0 }}</th>
            <th>{{ materialStock.1 }}</th>
            <th>{{ materialStock.2 }}</th>
            <th>{{ materialStock.3 }}</th>
            {% if materialStock.4 > 0 %}
            <th><span class="badge badge-success">{{ materialStock.4 }}</span></th>
            {% else %}
            <th><span class="badge badge-important">{{ materialStock.4 }}</span></th>
            {% endif %}
          </tr>
        {% endfor %}
        </tbody>
      </table>
      <br />
    </div> <!-- hero-unit -->
  </div> <!-- tab-pane active -->
  {% endblock %}
</div> <!-- tab-content -->
{% endblock %}
